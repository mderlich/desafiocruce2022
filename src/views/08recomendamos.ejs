<div class="contenedor">
    
    <% for(let i=0; i< productNovedades.length ; i++) { %>
       
       <div class="box">
   
           <div class="box_izq">
               <img src="/img/productos/<%= productNovedades[i].img %>.png" >
               <% 
               /* ------------------------------- */
               function numberWithCommas(x) {
                   return Intl.NumberFormat('de-DE').format(x);
               }
               /* ------------------------------- */
               let precio_dto;
   
               if (productNovedades[i].descuento > 0) { 
               
                   
                   precio_finaldto = productNovedades[i].precio - (( productNovedades[i].descuento / 100 ) * productNovedades[i].precio);
                   precio_dto = precio_finaldto / 6;
               
               %>
               <img src="/img/dto.png" class="dto">
               <% } else {
                   precio_dto = productNovedades[i].precio / 6;
               }%>
           </div>
           
           <div class="informacion">
               <span class="texto_lila"><%= productNovedades[i].categoria %></span>
               <br>
               <%= productNovedades[i].nombre %>
   
               
               <div class="cuotas">
                   <% if ( productNovedades[i].stock > 0 ) { %>
                   6 Cuotas s/interés de 
                   <br>
                   <span class="cuotas_precio">$<%= numberWithCommas(precio_dto) %></span> 
                   <% } %>
               </div>
               
   
               Final: 
               <%
               /* si tiene descuento */
               if (productNovedades[i].descuento > 0 && productNovedades[i].stock > 0 ) {             
               %>
   
               <span class="precio_tachado">$<%= numberWithCommas(productNovedades[i].precio) %></span>
               <span class="precio_rojo">$<%= numberWithCommas(precio_finaldto) %></span>
               
               <% } else if (productNovedades[i].descuento == 0 && productNovedades[i].stock > 0) {
                   precio_dto = productNovedades[i].precio / 6;
               %>
               <span class="precio">$<%= numberWithCommas(productNovedades[i].precio) %></span>
               <% } else { %>
                   <span class="precio_rojo">Artículo sin stock</span>
               <% } %>
                
   
               
           </div>
   
           <div>
                
               <button class="xboton_cart"><i class="fas fa-shopping-cart cart"></i> </button> 
               <button class="xboton_articulo">Ver artículo</button> 
           </div>
   
       </div>
       
   <% } %>
   
   
